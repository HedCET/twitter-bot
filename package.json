{
  "author": "linto.cet@gmail.com",
  "dependencies": {
    "@hapi/joi": "latest",
    "@nestjs/common": "^7.6.3",
    "@nestjs/core": "^7.6.3",
    "@nestjs/jwt": "latest",
    "@nestjs/mongoose": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "^7.6.3",
    "@nestjs/schedule": "latest",
    "amqplib": "latest",
    "amqplib-rpc": "latest",
    "big-integer": "latest",
    "cache-manager": "latest",
    "class-transformer": "latest",
    "class-validator": "latest",
    "compression": "latest",
    "cors": "latest",
    "dotenv": "latest",
    "express-rate-limit": "latest",
    "helmet": "latest",
    "lodash": "latest",
    "moment": "latest",
    "mongoose": "5.10.19",
    "passport": "latest",
    "passport-jwt": "latest",
    "reflect-metadata": "latest",
    "twitter-lite": "latest",
    "validator": "latest"
  },
  "description": "twitter-bot",
  "devDependencies": {
    "@nestjs/cli": "latest",
    "@nestjs/schematics": "latest",
    "@nestjs/testing": "^7.6.3",
    "@types/express": "latest",
    "@types/jest": "latest",
    "@types/node": "^14.14.14",
    "@types/supertest": "latest",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "latest",
    "prettier": "latest",
    "rimraf": "latest",
    "supertest": "latest",
    "ts-jest": "latest",
    "ts-loader": "latest",
    "ts-node": "latest",
    "tsconfig-paths": "latest",
    "typescript": "latest",
    "wait-on": "latest"
  },
  "engines": {
    "node": "12.x"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "license": "private",
  "name": "twitter-bot",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "postinstall": "npm run build",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "nest start --watch",
    "start:prod": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 dist/main",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "version": "1.0.0"
}
